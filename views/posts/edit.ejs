<% layout('layouts/boilerplate') -%>
<h1>Edit Post</h1>

<form action="/posts/<%= post._id %>?_method=PUT" method="POST" id="postEditForm" enctype="multipart/form-data">
<div>
    <label for="title">Title</label>
    <input type="text" name="post[title]" placeholder="Title" value="<%= post.title %>" id="title">
</div>
<div>
    <label for="price">Price</label>
    <input type="number" name="post[price]" placeholder="Price" value="<%= post.price %>" id="price" step=".01">
</div>
<div>
    <input type="file" id="imageUpload" accept="images/*" name="images" multiple> 
</div>
<div>
    <% for (let img in post.images) { %>
        <img src="<%=post.images[img].path%>" alt="" width="100px">
        <label for="image<%=img%>">Delete?</label>
        <input type="checkbox" id="image<%=img%>" name="deleteImages[]" class="imageDeleteCheckbox" value="<%=post.images[img].filename%>">    
    <% } %> 
</div>
<div>
    <label for="description">Description</label><br>
    <textarea name="post[description]" placeholder="Description" id="" cols="22" rows="10" id="description"><%= post.description %></textarea>
</div>
<div>
    <label for="location">Location</label>
    <input type="text" name="post[location]" placeholder="Location" value="<%= post.location %>" id="location">
</div>
<input type="submit">
</form>
<a href="/posts">Back to posts</a>

<script src="/javascripts/post-edit.js"></script>