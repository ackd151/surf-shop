<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Edit Post</h1>

<form action="/posts/<%= post._id %>?_method=PUT" method="POST" id="postEditForm" enctype="multipart/form-data">
    <div>
        <label for="title">Title</label>
        <input type="text" name="post[title]" placeholder="Title" value="<%= post.title %>" id="title">
    </div>
    <div>
        <label for="price">Price</label>
        <input type="text" name="post[price]" placeholder="Price" value="<%= post.price %>" id="price">
    </div>
    <div>
        <input type="file" id="imageUpload" accept="images/*" name="images" multiple> 
    </div>
    <div>
        <% for (let img in post.images) { %>
            <img src="<%=post.images[img].url%>" alt="" width="100px">
            <label for="image<%=img%>">Delete?</label>
            <input type="checkbox" id="image<%=img%>" name="deleteImages[]" class="imageDeleteCheckbox" value="<%=post.images[img].public_id%>">    
        <% } %> 
    </div>
    <div>
        <label for="description">Description</label><br>
        <textarea name="post[description]" placeholder="Description" id="" cols="22" rows="10" id="description"><%= post.description %></textarea>
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" name="post[location]" placeholder="Location" value="<%= post.location %>" id="location">
    </div>
    <input type="submit">
</form>
<a href="/posts">Back to posts</a>

<script>
    // client side image count limiting
    let postEditForm = document.getElementById('postEditForm');
    postEditForm.addEventListener('submit', function(event){
        let uploading = document.getElementById('imageUpload').files.length;
        let existingImages = document.querySelectorAll('.imageDeleteCheckbox').length;
        let deleting = document.querySelectorAll('.imageDeleteCheckbox:checked').length;
        let newTotal = existingImages + uploading - deleting;
        if (newTotal > 4) {
            event.preventDefault();
            alert(`You need to remove at least ${newTotal - 4} (more) image(s)`);
        }
    });
</script>

</body>
</html>